{
  "name": "@your-org/gantt-feature",
  "version": "1.0.0",
  "description": "Standalone Gantt chart feature for React + Supabase projects",
  "type": "module",
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": {
      "types": "./index.ts",
      "import": "./index.ts"
    },
    "./adapters": {
      "types": "./adapters/index.ts",
      "import": "./adapters/index.ts"
    },
    "./types": {
      "types": "./types/index.ts",
      "import": "./types/index.ts"
    },
    "./hooks": {
      "types": "./hooks/index.ts",
      "import": "./hooks/index.ts"
    },
    "./components": {
      "types": "./components/index.ts",
      "import": "./components/index.ts"
    },
    "./lib": {
      "types": "./lib/index.ts",
      "import": "./lib/index.ts"
    },
    "./store": {
      "types": "./store/gantt.store.ts",
      "import": "./store/gantt.store.ts"
    }
  },
  "files": [
    "adapters",
    "components",
    "context",
    "hooks",
    "lib",
    "pages",
    "services",
    "store",
    "types",
    "index.ts",
    "README.md",
    "INTEGRATION_GUIDE.md",
    "ARCHITECTURE_DIAGRAM.md",
    "FOLDER_STRUCTURE.md"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build": "tsc",
    "test": "vitest"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@tanstack/react-query": "^5.0.0",
    "zustand": "^4.0.0",
    "date-fns": "^2.30.0 || ^3.0.0",
    "@supabase/supabase-js": "^2.0.0",
    "@dnd-kit/core": "^6.0.0",
    "@dnd-kit/sortable": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "@dnd-kit/core": {
      "optional": true
    },
    "@dnd-kit/sortable": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "gantt",
    "gantt-chart",
    "react",
    "typescript",
    "supabase",
    "project-management",
    "task-management",
    "timeline",
    "scheduling",
    "standalone",
    "portable",
    "feature-module"
  ],
  "author": "Your Organization",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/gantt-feature.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/gantt-feature/issues"
  },
  "homepage": "https://github.com/your-org/gantt-feature#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
